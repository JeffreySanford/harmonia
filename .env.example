# Environment Variables Template
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/harmonia

# JWT Authentication (IMPORTANT: Generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Server Configuration
PORT=3000
HOST=localhost

# CORS Configuration
CORS_ORIGIN=http://localhost:4200

# API Prefix
API_PREFIX=api

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DEST=./uploads

# Logging
LOG_LEVEL=debug

# Developer convenience: set to true to auto-create a weak test user (test/password) when E2E env vars are not set.
# NOT recommended for production. Useful for local development only.
DEV_AUTOGEN_TEST_USER=false

# Ollama config
# Set to true to enable Ollama usage in development. Set false for no remote LLM calls (fallback to simulated metadata).
USE_OLLAMA=false
# Ollama server URL (default: local Ollama)
OLLAMA_URL=http://localhost:11434
# Ollama model to use (e.g., deepseek, minstral3)
OLLAMA_MODEL=deepseek
